<Router AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Layout.VerticalLayout)">
            <NotAuthorized>
                <RedirectToUnauthorized />
            </NotAuthorized>
            <Authorizing>
                <div class="container mt-5">
                    <div class="row justify-content-center">
                        <div class="col-md-6 text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                            <p class="mt-3">Verificando permisos...</p>
                        </div>
                    </div>
                </div>
            </Authorizing>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Página no encontrada</PageTitle>
        <LayoutView Layout="typeof(Layout.VerticalLayout)">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-8 text-center">
                        <h1 class="display-4">404</h1>
                        <p class="lead">Página no encontrada</p>
                        <a href="/" class="btn btn-primary">Volver al Inicio</a>
                    </div>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>
