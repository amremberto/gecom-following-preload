@page "/"
@rendermode InteractiveServer
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<PageTitle>Preload | Dashboard</PageTitle>
<Topbar title="Dashboard"/>

@if (_isLoading)
{
    <div class="text-center py-2">
        <button class="btn btn-primary" type="button" disabled>
            <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
            Cargando datos...
        </button>
    </div>
}
else
{
    <div class="row">
        <!-- Pendind Documents Card -->
        <div class="col-md-3">
            <div class="card bg-danger-subtle" style="cursor: pointer;" @onclick="NavigateToPendingDocuments">
                <div class="card-body widget-user">
                    <div class="text-center">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                <div class="avatar-lg bg-danger-subtle rounded">
                                    <i class="ri-time-line fs-36 text-danger"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <h1 class="mb-1 text-danger display-4">@_totalPendingDocuments</h1>
                                <p class="mb-0 fw-bold text-danger fs-4">Documentos Pendientes</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Paid Documents Card -->
        <div class="col-md-3">
            <div class="card bg-success-subtle">
                <div class="card-body widget-user">
                    <div class="text-center">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                <div class="avatar-lg bg-success-subtle rounded">
                                    <i class="ri-checkbox-circle-line fs-36 text-success"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <h1 class="mb-1 text-success display-4">@_totalPaidDocuments</h1>
                                <p class="mb-0 fw-bold text-success fs-4">Documentos Pagados</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Purchase Orders Card -->
        <div class="col-md-3">
            <div class="card bg-warning-subtle">
                <div class="card-body widget-user">
                    <div class="text-center">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                <div class="avatar-lg bg-warning-subtle rounded">
                                    <i class="ri-shopping-cart-2-line fs-36 text-warning"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <h1 class="mb-1 text-warning display-4">@_totalPurchaseOrders</h1>
                                <p class="mb-0 fw-bold text-warning fs-4">Ordenes de Compra</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Documents Card -->
        <div class="col-md-3">
            <div class="card bg-primary-subtle">
                <div class="card-body widget-user">
                    <div class="text-center">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                <div class="avatar-lg bg-primary-subtle rounded">
                                    <i class="ri-file-list-3-line fs-36 text-primary"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <h1 class="mb-1 text-primary display-4">@_totalDocuments</h1>
                                <p class="mb-0 fw-bold fs-4">Total de Documentos</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        

        
    </div>

    <!-- User Claims, Roles and Tokens Card -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="ri-user-settings-line me-2"></i>Información de Autenticación del Usuario
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="nav nav-tabs nav-tabs-custom" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#claims-tab" role="tab">
                                <i class="ri-file-list-line me-1"></i> Claims
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#roles-tab" role="tab">
                                <i class="ri-shield-user-line me-1"></i> Roles
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#tokens-tab" role="tab">
                                <i class="ri-key-line me-1"></i> Tokens
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content p-3">
                        <!-- Claims Tab -->
                        <div class="tab-pane fade show active" id="claims-tab" role="tabpanel">
                            @if (_userClaims.Count > 0)
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped table-sm">
                                        <thead>
                                            <tr>
                                                <th>Tipo</th>
                                                <th>Valor</th>
                                                <th>Issuer</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var claim in _userClaims)
                                            {
                                                <tr>
                                                    <td><code>@claim.Type</code></td>
                                                    <td>@claim.Value</td>
                                                    <td><small class="text-muted">@claim.Issuer</small></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No hay claims disponibles.</p>
                            }
                        </div>

                        <!-- Roles Tab -->
                        <div class="tab-pane fade" id="roles-tab" role="tabpanel">
                            @if (_userRoles.Count > 0)
                            {
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var role in _userRoles)
                                    {
                                        <span class="badge bg-primary rounded-pill fs-6">@role</span>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No hay roles asignados.</p>
                            }
                        </div>

                        <!-- Tokens Tab -->
                        <div class="tab-pane fade" id="tokens-tab" role="tabpanel">
                            <div class="mb-4">
                                <h6 class="mb-2">
                                    <i class="ri-key-line me-1"></i>Access Token
                                </h6>
                                @if (!string.IsNullOrWhiteSpace(_accessToken))
                                {
                                    <div class="position-relative">
                                        <pre class="bg-light p-3 rounded border" style="max-height: 200px; overflow-y: auto; word-break: break-all; font-size: 0.85rem;"><code>@_accessToken</code></pre>
                                        <button class="btn btn-sm btn-outline-primary position-absolute top-0 end-0 m-2" 
                                                @onclick="() => CopyToClipboardAsync(_accessToken)" 
                                                title="Copiar al portapapeles">
                                            <i class="ri-file-copy-line"></i>
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted">Access token no disponible.</p>
                                }
                            </div>

                            <div>
                                <h6 class="mb-2">
                                    <i class="ri-key-line me-1"></i>ID Token
                                </h6>
                                @if (!string.IsNullOrWhiteSpace(_idToken))
                                {
                                    <div class="position-relative">
                                        <pre class="bg-light p-3 rounded border" style="max-height: 200px; overflow-y: auto; word-break: break-all; font-size: 0.85rem;"><code>@_idToken</code></pre>
                                        <button class="btn btn-sm btn-outline-primary position-absolute top-0 end-0 m-2" 
                                                @onclick="() => CopyToClipboardAsync(_idToken)" 
                                                title="Copiar al portapapeles">
                                            <i class="ri-file-copy-line"></i>
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted">ID token no disponible.</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
