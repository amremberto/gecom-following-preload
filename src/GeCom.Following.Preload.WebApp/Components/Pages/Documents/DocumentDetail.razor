@page "/documents/{DocId:int}"
@rendermode InteractiveServer
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<PageTitle>Detalle de Documento</PageTitle>

<Topbar title="Detalle de Documento" />

@if (_isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-3">Cargando información del documento...</p>
    </div>
}
else if (_document is null)
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Documento no encontrado</h4>
        <p>No se pudo encontrar el documento con ID: @DocId</p>
        <hr>
        <button class="btn btn-primary" @onclick="NavigateToDocuments">
            <i class="ri-arrow-left-line me-1"></i> Volver a Documentos
        </button>
    </div>
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="ri-file-text-line me-2"></i> Documento #@_document.DocId
                        </h5>
                        <button class="btn btn-soft-primary" @onclick="NavigateToDocuments">
                            <i class="ri-arrow-left-line me-1"></i> Volver
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Información del Documento</h6>
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td class="fw-bold" style="width: 40%;">ID:</td>
                                        <td>@_document.DocId</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Estado:</td>
                                        <td>
                                            <span class="badge @GetEstadoBadgeClass(_document.EstadoDescripcion)">
                                                @(_document.EstadoDescripcion ?? "Sin estado")
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Proveedor CUIT:</td>
                                        <td>@(_document.ProveedorCuit ?? "N/A")</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Razón Social:</td>
                                        <td>@(_document.ProveedorRazonSocial ?? "N/A")</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Sociedad CUIT:</td>
                                        <td>@(_document.SociedadCuit ?? "N/A")</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Sociedad:</td>
                                        <td>@(_document.SociedadDescripcion ?? "N/A")</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Tipo de Documento:</td>
                                        <td>@FormatDocumentType(_document)</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Punto de Venta:</td>
                                        <td>@(_document.PuntoDeVenta ?? "N/A")</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Número de Comprobante:</td>
                                        <td>@(_document.NumeroComprobante ?? "N/A")</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Información Financiera</h6>
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td class="fw-bold" style="width: 40%;">Fecha de Emisión:</td>
                                        <td>@(_document.FechaEmisionComprobante?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Moneda:</td>
                                        <td>@(_document.Moneda ?? "N/A")</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Monto Bruto:</td>
                                        <td>@(_document.MontoBruto?.ToString("N2") ?? "N/A")</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">CAECAI:</td>
                                        <td>@(_document.Caecai ?? "N/A")</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Vencimiento CAECAI:</td>
                                        <td>@(_document.VencimientoCaecai?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Fecha de Creación:</td>
                                        <td>@(_document.FechaCreacion?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Nombre Solicitante:</td>
                                        <td>@(_document.NombreSolicitante ?? "N/A")</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    @if (_document.Attachments?.Any() == true)
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h6 class="text-muted mb-3">Archivos Adjuntos</h6>
                                <div class="list-group">
                                    @foreach (var attachment in _document.Attachments)
                                    {
                                        <div class="list-group-item">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <i class="ri-file-pdf-line me-2"></i>
                                                    <span>@attachment.Path</span>
                                                </div>
                                                <small class="text-muted">@attachment.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</small>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="d-flex justify-content-end gap-2">
                                <button class="btn btn-soft-warning" @onclick="EditDocument">
                                    <i class="ri-edit-line me-1"></i> Editar
                                </button>
                                <button class="btn btn-soft-primary" @onclick="NavigateToDocuments">
                                    <i class="ri-arrow-left-line me-1"></i> Volver
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
