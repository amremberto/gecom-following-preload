@page "/identity-server-error"
@using GeCom.Following.Preload.WebApp.Components.Layout
@layout EmptyLayout
@rendermode InteractiveServer
@attribute [Microsoft.AspNetCore.Authorization.AllowAnonymous]

<PageTitle>Error de Conexión - Servidor de Identidad</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center">
                <div class="mb-4">
                    <i class="ri-server-line" style="font-size: 5rem; color: #f06548;"></i>
                </div>
                <h1 class="display-4 mb-3">Error de Conexión</h1>
                <p class="lead mb-4">
                    No se puede establecer conexión con el servidor de identidad.
                </p>
                <div class="alert alert-warning mb-4" role="alert">
                    <h5 class="alert-heading">
                        <i class="ri-information-line me-2"></i>
                        Posibles causas:
                    </h5>
                    <ul class="text-start mb-0">
                        <li>El servidor de identidad no está disponible o no está ejecutándose.</li>
                        <li>Problemas de conectividad de red.</li>
                        <li>Configuración incorrecta del cliente (ClientId, ClientSecret, Authority).</li>
                        <li>El servidor de identidad está rechazando la conexión.</li>
                    </ul>
                </div>
                <p class="text-muted mb-4">
                    Por favor, contacte al administrador del sistema para resolver este problema.
                </p>
                <div class="mt-4">
                    <button type="button" class="btn btn-primary me-2" @onclick="RetryConnection">
                        <i class="ri-refresh-line me-2"></i>
                        Reintentar Conexión
                    </button>
                    <a href="/" class="btn btn-outline-secondary">
                        <i class="ri-home-line me-2"></i>
                        Volver al Inicio
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@inject Microsoft.AspNetCore.Components.NavigationManager NavigationManager

@code {
    private void RetryConnection()
    {
        // Forzar recarga de la página para reintentar la conexión
        NavigationManager.NavigateTo("/", forceLoad: true);
    }
}

