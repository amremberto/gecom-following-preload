@page "/unauthorized"
@rendermode InteractiveServer
@attribute [Microsoft.AspNetCore.Authorization.AllowAnonymous]

<PageTitle>Acceso Denegado</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center mt-5">
                <div class="mb-4">
                    <i class="ri-error-warning-line" style="font-size: 5rem; color: #f06548;"></i>
                </div>
                <h1 class="display-4 mb-3">Acceso Denegado</h1>
                <p class="lead mb-4">
                    No tiene permisos para acceder a este recurso.
                </p>
                <p class="text-muted mb-4">
                    Si cree que esto es un error, contacte al administrador del sistema.
                </p>
                <div class="mt-4">
                    <a href="/" class="btn btn-primary">
                        <i class="ri-home-line me-2"></i>
                        Volver al Inicio
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

