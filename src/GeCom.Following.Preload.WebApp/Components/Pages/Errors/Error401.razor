@page "/error-401"

@layout EmptyLayout
@rendermode InteractiveServer
@attribute [Microsoft.AspNetCore.Authorization.AllowAnonymous]

<PageTitle>401 - No Autorizado</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center">
                <div class="mb-4">
                    <i class="ri-lock-line" style="font-size: 5rem; color: #f06548;"></i>
                </div>
                <h1 class="display-1 mb-3">401</h1>
                <h2 class="display-6 mb-3">No Autorizado</h2>
                <p class="lead mb-4">
                    No tiene autorización para acceder a este recurso. Debe autenticarse primero.
                </p>
                <div class="alert alert-warning mb-4" role="alert">
                    <h5 class="alert-heading">
                        <i class="ri-information-line me-2"></i>
                        Información:
                    </h5>
                    <p class="mb-0">
                        Para acceder a este recurso, necesita iniciar sesión con sus credenciales.
                    </p>
                </div>
                <p class="text-muted mb-4">
                    Por favor, inicie sesión para continuar.
                </p>
                <div class="mt-4">
                    <a href="/" class="btn btn-primary">
                        <i class="ri-login-box-line me-2"></i>
                        Iniciar Sesión
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
