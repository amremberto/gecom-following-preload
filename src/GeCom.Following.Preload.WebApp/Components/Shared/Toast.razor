<div class="toast-container position-fixed top-0 end-0 p-3">
    <div class="toast @GetToastClasses()" id="@ToastId" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header @GetHeaderClasses()">
            <img src="/images/logo-sm.png" alt="brand-logo" height="16" class="me-1" />
            <strong class="me-auto">@GetTitle()</strong>
            <button type="button" class="btn-close @GetCloseButtonClasses()" data-bs-dismiss="toast" aria-label="Cerrar"></button>
        </div>
        <div class="toast-body">
            @Message
        </div>
    </div>
</div>
